{
  "name": "rc-service",
  "version": "1.1.0",
  "description": "React Context Services",
  "main": "dist/index.js",
  "module": "dist/index.m.js",
  "esmodule": "dist/index.modern.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "author": "Porfirio Ribeiro<porfirioribeiro@gmail.com>",
  "repository": "https://github.com/porfirioribeiro/rc-service",
  "license": "MIT",
  "files": [
    "dist",
    "es6",
    "src"
  ],
  "mangle": {
    "regex": "^_"
  },
  "devDependencies": {
    "@reach/router": "^1.3.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/reach__router": "^1.3.7",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "dot-prop-immutable": "^2.1.0",
    "fast-memoize": "^2.5.2",
    "jest": "^26.6.3",
    "microbundle": "^0.13.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "scripts": {
    "clean": "rimraf dist es6 .rts2_cache* sample/.cache sample/dist",
    "test": "jest",
    "build:es6": "tsc -p tsconfig.es6.json",
    "build:mb": "microbundle --globals react=React,react-dom=ReactDom",
    "build": "yarn build:es6 && yarn build:mb",
    "example": "parcel sample/index.html",
    "dev": "tsc -p tsconfig.es6.json -w",
    "prepublish": "yarn clean && yarn build"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/setupjest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
